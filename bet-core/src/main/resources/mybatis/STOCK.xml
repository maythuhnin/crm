<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eniac.projects.bet.mappers.IStockMapper">

	<resultMap 			type="StockBean" 		id="StockResult">
		<id 			property="id" 				column="id" />
		<result 		property="inventoryId" 		column="inventory_id" />
		<result		 	property="quantity" 		column="quantity" />
		<result		 	property="stockIn" 			column="stock_in" />
		<result		 	property="transactionDate" 	column="transaction_date" />
		<result 		property="updatedId" 		column="updated_id" />
		<result 		property="updatedDateTime" 	column="updated_datetime" />
	</resultMap>

	<insert id="insertStock" parameterType="StockBean" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO stock(
			inventory_id,
			quantity,
			stock_in,
			transaction_date,
			updated_id,
			updated_datetime
			)
		VALUES(
			#{inventoryId},
			#{quantity},
			#{stockIn},
			#{transactionDate},
			#{updatedId},
			NOW()
		)
	</insert>
	
	<delete id="deleteStock" parameterType="int">
		DELETE FROM STOCK WHERE INVENTORY_ID =#{id}
	</delete>
	
	<select id="selectForDatatable" resultType="map" parameterType="int">
		SELECT 
		 	id,
		 	inventory_id AS inventoryId,
			quantity,
			stock_in AS stockIn,
			DATE_FORMAT(transaction_date,'%d/%m/%Y') AS transactionDate
		FROM stock 
	</select>
	
</mapper>