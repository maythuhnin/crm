<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eniac.projects.bet.mappers.ILoanHistoryMapper">

	<resultMap 			type="LoanHistoryBean" 		id="LoanHistoryResult">
		<id 			property="id" 				column="id" />
		<result 		property="driverId" 		column="driver_id" />
		<result		 	property="loanDate" 		column="loan_date" />
		<result		 	property="amount" 			column="amount" />
		<result 		property="type" 			column="type" />
		<result 		property="remark" 			column="remark" />
		<result 		property="updatedId" 		column="updated_id" />
		<result 		property="updatedDateTime" 	column="updated_datetime" />
	</resultMap>

	<insert id="insertLoanHistory" parameterType="LoanHistoryBean" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO LOAN_HISTORY(
			driver_id,
			loan_date,
			amount,
			type,
			<if test="remark != null">
				remark,
			</if>
			updated_id,
			updated_datetime
			)
		VALUES(
			#{driverId},
			#{loanDate},
			#{amount},
			#{type},
			<if test="remark != null">
				#{remark},
			</if>
			#{updatedId},
			NOW()
		)
	</insert>
	
	<update id="updateLoanHistory" parameterType="LoanHistoryBean">
		UPDATE LOAN_HISTORY SET 
			<if test="loanDate != null">
				LOAN_DATE = #{loanDate}
			</if>
			<if test="amount != null">
				,AMOUNT = #{amount}
			</if>
			<if test="type != null">
				,TYPE = #{type}
			</if>
			<if test="remark != null">
				,REMARK = #{remark}
			</if>
		WHERE ID =#{id} 
	</update>
	
	<delete id="deleteLoanHistory" parameterType="int">
		DELETE FROM LOAN_HISTORY WHERE ID =#{id}
	</delete>
	
	<select id="selectForDatatable" resultType="map" parameterType="int">
		SELECT 
		 id,
		 driver_id AS driverId,
		 DATE_FORMAT(loan_date,'%d/%m/%Y') AS loanDate,
		 amount AS loanAmount,
		 type,
		 remark
		
		FROM LOAN_HISTORY
		WHERE driver_id = #{driverId}
	</select>
	
</mapper>